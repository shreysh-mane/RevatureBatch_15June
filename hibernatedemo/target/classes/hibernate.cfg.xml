<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<!-- Session Factory will give you session object 
	useing that session object you can access the predefined methods of hibernate
	-->
	<!-- Inside the session factory tag you will give all your db related information -->
<session-factory>
		<!-- mention the driver for db -->
      <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
      <!-- db url  -->
      <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatetest</property>
      <!-- db username -->
      <property name="hibernate.connection.username">root</property>
      <!--  db password -->
      <property name="hibernate.connection.password">shreysh@s</property>
     
     <!-- to see the queries generated by hibernate -->
      <property name="show_sql">true</property>
      
      <!-- specify the query language -->
      <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
      
      <!--  to set the creation mode of your table -->
	  <property name="hibernate.hbm2ddl.auto">update</property>
	  <!-- update:  at the time of saving obj if table is not present it will create the tabel
	                if the table is present it will store the obj in that table itself --> 
	  <!-- Create: wheather table is present in the db or not it will create a new table and store the obj -->
	 
      <property name="hibernate.connection.pool_size">10</property>
      
      
      <!-- Properties for second level cache -->
      <property name="cache.use_second_Level_cache">true</property>
 	<property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
      
 	
		<mapping class="com.revature.model.Userdata"/> 
		<mapping class="com.revature.model.Student"/> 
		<mapping class="com.revature.model.Course"/> 
		<mapping class="com.revature.model.Emp"/> 
		
		<!-- To tell the hibernate that these class obj you have to store in db -->
 	
</session-factory>
</hibernate-configuration>